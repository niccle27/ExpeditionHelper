<UserControl x:Class="ExpeditionHelper.UserControlSpent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpeditionHelper"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Expander>
        <Expander.Header>
            <Label FontWeight="DemiBold">01/01/01</Label>
        </Expander.Header>
        <Expander.Content>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label>Category:</Label>
                    <Label Content="default" Name="lblCategory"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label>Price:</Label>
                    <Label Name="lblPrice">50</Label>
                    <Label>$</Label>
                </StackPanel>
                <TextBlock Name="tbComment" Width="450" TextWrapping="WrapWithOverflow" Text="Default"  />
            </StackPanel>

        </Expander.Content>

    </Expander>

</UserControl>
